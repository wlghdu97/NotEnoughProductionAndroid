<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="@string/key_theme_category"
        app:title="@string/title_theme">

        <SwitchPreferenceCompat
            app:key="@string/key_theme"
            app:title="@string/title_dark_theme"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="@string/key_db_category"
        app:title="@string/title_db">

        <SwitchPreferenceCompat
            app:key="@string/key_db_status"
            app:isPreferenceVisible="false"/>

        <Preference
            app:key="@string/key_db_status_ui"
            app:title="@string/title_db_status"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

</PreferenceScreen>