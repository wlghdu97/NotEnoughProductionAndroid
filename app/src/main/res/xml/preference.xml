<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="@string/key_theme_category"
        app:title="@string/title_theme">

        <SwitchPreferenceCompat
            app:key="@string/key_theme"
            app:title="@string/title_dark_theme" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="@string/key_db_category"
        app:title="@string/title_db">

        <SwitchPreferenceCompat
            app:key="@string/key_db_status"
            app:title="@string/title_db_status" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="@string/key_icon_category"
        app:title="@string/title_icon">

        <SwitchPreferenceCompat
            app:key="@string/key_icon_status"
            app:title="@string/title_icon_status" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/title_misc">

        <Preference
            app:key="@string/key_privacy_policy"
            app:title="@string/title_privacy_policy" />

    </PreferenceCategory>

</PreferenceScreen>
